// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id             Int        @id @default(autoincrement())
  nome           String
  matricula      String
  dataNascimento String
  email          String
  endereco       String
  turma_id       String
  created_at     DateTime   @default(now())
  updated_at     DateTime   @default(now())
  Tarefa         Tarefa[]
  Entregas       Entregas[]
}

model Professor {
  id        Int         @id @default(autoincrement())
  nome      String
  email     String
  Turma     Turma[]
  Diciplina Diciplina[]
}

model Turma {
  id           Int       @id @default(autoincrement())
  nome         String
  ano          String
  professor_id Int
  professor    Professor @relation(fields: [professor_id], references: [id])
  Tarefa       Tarefa[]
}

model Tarefa {
  id          Int      @id @default(autoincrement())
  descricao   String
  dataEntrega DateTime
  turma_id    Int
  aluno_id    Int

  turma Turma @relation(fields: [turma_id], references: [id])
  aluno Aluno @relation(fields: [aluno_id], references: [id])
}

model Diciplina {
  id           Int    @id @default(autoincrement())
  nome         String
  cargaHoraria String
  Universidade String
  professor_id Int
  tarefa_id    Int

  professor Professor @relation(fields: [professor_id], references: [id])
 
}

model Entregas {
  id          Int      @id @default(autoincrement())
  dataEntrega DateTime
  notas       Int
  aluno_id    Int
  aluno       Aluno    @relation(fields: [aluno_id], references: [id])
}
